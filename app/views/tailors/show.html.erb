<%- model_class = Tailor -%>
<div class="section-header">
  <div class="page-header">
    <h1><%= t '.title', :default => t(model_class.model_name.human.titleize) %></h1>
  </div>
</div>
<div class="card">
  <div class="card-header">
    <h4><strong><%= model_class.human_attribute_name(t(:name)) %>:</strong> <%= @tailor.name %></h4>
  </div>
  <div class="card-body">

      <%= link_to t('.back', :default => t("helpers.links.back")), tailors_path, :class => 'btn btn-secondary' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_tailor_path(@tailor), :class => 'btn btn-warning' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), tailor_path(@tailor), :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  </div>
</div>
