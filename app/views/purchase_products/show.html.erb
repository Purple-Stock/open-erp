<%- model_class = PurchaseProduct -%>
<div class="section-header">
  <div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>
</div>

<div class="section-body">
  <div class="card">
    <div class="card-body">

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
        <dd><%= @purchase_product.quantity %></dd>
        <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
        <dd><%= @purchase_product.value %></dd>
        <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
        <dd><%= @purchase_product.product_id %></dd>
        <dt><strong><%= model_class.human_attribute_name(:purchase_id) %>:</strong></dt>
        <dd><%= @purchase_product.purchase_id %></dd>
      </dl>

      <%= link_to t('.back', :default => t("helpers.links.back")), purchase_products_path, :class => 'btn btn-default' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_purchase_product_path(@purchase_product), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  purchase_product_path(@purchase_product), :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>

    </div>
  </div>
</div>