<div class="card mt-4">
  <div class="card-header">
    <h1>Situações dos pedidos</h1>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col mb-4 mb-lg-0 text-center">
        <h1 class="mt-2 font-weight-bold">Em Andamento</h1>
        <h2 class="card-stats-item-count"><span class="text-primary"></span> <%= @in_progress_order_items.count %></h2>
      </div>
      <div class="col mb-4 mb-lg-0 text-center">
        <h1 class="mt-2 font-weight-bold">Impresso</h1>
        <h2 class="card-stats-item-count"><span class="text-primary"></span> <%= @printed_order_items.count %></h2>
      </div>
      <div class="col mb-4 mb-lg-0 text-center">
        <h1 class="mt-2 font-weight-bold">Pendentes</h1>
        <h2 class="card-stats-item-count"><span class="text-danger"></span> <%= @pending_order_items.count %></h2>
      </div>
      <div class="col mb-4 mb-lg-0 text-center">
        <h1 class="mt-2 font-weight-bold">Verificados</h1>
        <h2 class="card-stats-item-count"><%= @current_done_order_items %></h2>
      </div>
      <div class="col mb-4 mb-lg-0 text-center">
        <h1 class="mt-2 font-weight-bold">Coletados</h1>
        <h2 class="card-stats-item-count"><span class="text-primary"></span> <%= @colected_orders %></h2>
      </div>
    </div>
  </div>
</div>

<section class="section p-3">
  <div class="row p-0">
    <div class="card col-sm-12 col-md-3 col-xl-4 col-3-grid">
      <div class="card-header"><h3>Pedidos Em andamento(Pagos)</h3></div>
      <div class="card-body">
        <%= render 'order_items_with_filters', order_items: @grouped_in_progress_order_items,
                  show_revenue_estimation: false, highlighted: false, status: BlingOrderItemStatus::IN_PROGRESS %>
      </div>
    </div>

    <div class="card col-sm border-danger">
      <div class="card-header"><h3>Pedidos Impressos</h3></div>
      <div class="card-body">
        <%= render 'order_items_with_filters', order_items: @grouped_printed_order_items,
                  show_revenue_estimation: false, highlighted: false, status: BlingOrderItemStatus::PRINTED %>
      </div>    
    </div>    

    <div class="card col-sm-12 col-md-3 col-xl-4 col-3-grid">
      <div class="card-header"><h3>Pedidos Pendentes</h3></div>
      <div class="card-body">
        <%= render 'order_items_with_filters', order_items: @grouped_pending_order_items, show_revenue_estimation: false,
                  highlighted: false, status: BlingOrderItemStatus::PENDING %>
      </div>
    </div>
  </div>
</div> 

<script>
    setInterval(function() {
        window.location.reload();
    }, 300000);
</script>