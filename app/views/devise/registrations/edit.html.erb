<div class="card card-primary">
  <div class="card-header"><h2><%= t(".title") %></h2></div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'needs-validation' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :first_name, t(".first_name"), :class => 'control-label' %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "Nome", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, t(".last_name"), :class => 'control-label' %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "Sobrenome", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, t(".email"), :class => 'control-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, t(".password"), :class => 'control-label' %>
        <i>(Deixe em branco se você não quiser mudar)</i>
        <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
        <% if @minimum_password_length %>

          <em>Mínimo <%= @minimum_password_length %> caracteres </em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(".password_confirmation"), :class => 'control-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, t(".current_password"), :class => 'control-label' %>
        <i>(Nós precisamos do seu password atual para confirmar as mudanças)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t(".update"), :class => 'btn btn-primary' %>
      </div>
    <% end %>

<!--
      <h3>Cancel my account</h3>
      <p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
-->

  </div>
</div>

<%= link_to t(".back"), :back, class: 'btn btn-default' %>
