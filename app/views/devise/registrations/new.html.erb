<div class="card card-primary">
  <div class="card-header"><h2><%= t(".title") %></h2></div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :company_name, t(".company_name"), :class => 'control-label' %><br/>
        <%= f.text_field :company_name, autofocus: true, autocomplete: "Nome", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :cpf_cnpj, t(".tax_number"), :class => 'control-label' %><br/>
        <%= f.text_field :cpf_cnpj, autofocus: true, autocomplete: "insira cpf ou cnpj", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, t(".first_name"), :class => 'control-label' %><br/>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "Nome", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, t(".last_name"), :class => 'control-label' %><br/>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "Sobrenome", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, t(".email"), :class => 'control-label' %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone, t(".phone"), :class => 'control-label' %><br/>
        <%= f.telephone_field :phone, autofocus: true, autocomplete: "telefone", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, t(".password"), :class => 'control-label' %>
        <% if @minimum_password_length %>
          <em>MÃ­nimo (<%= @minimum_password_length %> caracteres)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(".password_confirmation"), :class => 'control-label' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t(".signup"), :class => 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
