<%- model_class = Supplier -%>
<div class="section-header">
  <div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>
</div>

<div class="section-body">
  <div class="card">
    <div class="card-body">

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @supplier.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:cnpj) %>:</strong></dt>
        <dd><%= @supplier.cnpj %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @supplier.email %></dd>
        <dt><strong><%= model_class.human_attribute_name(:cellphone) %>:</strong></dt>
        <dd><%= @supplier.cellphone %></dd>
        <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
        <dd><%= @supplier.phone %></dd>
        <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
        <dd><%= @supplier.address %></dd>
        <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
        <dd><%= @supplier.city %></dd>
        <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
        <dd><%= @supplier.state %></dd>
        <dt><strong><%= model_class.human_attribute_name(:landmark) %>:</strong></dt>
        <dd><%= @supplier.landmark %></dd>
        <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
        <dd><%= @supplier.note %></dd>
      </dl>

      <%= link_to t('.back', :default => t("helpers.links.back")), suppliers_path, :class => 'btn btn-default' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_supplier_path(@supplier), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), supplier_path(@supplier), :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>

    </div>
  </div>
</div>