<div class="container-ultra-wide">
  <section class="mt-5 section bordered-section">
    <% if @expires_at > Time.zone.now %>
      <p>Última Atualização: <%= @last_update %></p>
      <p>Token Expira: <%= pt_datetime_format(@expires_at) %></p>
    <% else %>  
      <p>Última Atualização: <%= @last_update %></p>
      <p>CLIQUE AQUI: <a target="_blank" href="https://www.bling.com.br/OAuth2/views/authorization.php?response_type=code&client_id=<%= ENV['CLIENT_ID']%>&state=323eb862289daff1f11ee6c23edb4f6e&">Atualizar Token</a></p>
    <% end %>
    <h1 class="text-center">Metas
      <span class="bi bi-eye-slash" id="eye-slash">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash" viewBox="0 0 16 16">
          <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
          <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
          <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
        </svg>
      </span>

      <span class="bi bi-eye" id="eye" hidden>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
      </svg>
      </span>
    </h1>
    <div class="row justify-content-center">
        <% if @monthly_revenue_estimation.present? %>
          <div class="col-sm text-center">
            <p>Meta de quantidade: <%= @monthly_revenue_estimation.quantity %></p>
          </div>
          <div class="col-sm text-center">
            <p>Meta de receita: <span id="revenue-estimation" hidden><%= number_to_currency_pt_br @monthly_revenue_estimation.revenue %></span></p>
          </div>
          <div class="col-sm text-center">
            <p>Ticket Médio: <span id="average-ticket" hidden><%= number_to_currency_pt_br @monthly_revenue_estimation.average_ticket %></span></p>
          </div>
        <% else %>
          <p><%= link_to 'Estimar quantidade esperadas para o mês atual', new_revenue_estimation_path %></p>
        <% end %>
    </div>
  </section>

  <section class="section p-0 bordered-section">
    <div class="px-4 pt-4 pb-1">
      <%= form_with(url: root_path, method: :get) do %>
        <div class="form-group row">
          <div class="col-md-6 col-lg-6 col-xl-auto mb-2 d-xl-inline-flex">
            <%= label_tag :initial_date, 'Data Inicial', class: 'mx-xl-1 col-form-label' %>
            <%= date_field_tag('initial_date', @default_initial_date, class: 'col-lg-12 col-xl-7 form-control') %>
          </div>
          <div class="col-md-6 col-lg-6 col-xl-auto mb-2 d-xl-inline-flex">
            <%= label_tag :final_date, 'Data Final', class: 'mx-xl-1 col-form-label' %>
            <%= date_field_tag(:final_date, @default_final_date, class: 'col-lg-12 col-xl-7 form-control') %>
          </div>
          <div class="col-12 col-lg-6 col-xl-auto my-1 my-xl-0">
            <%= submit_tag "Filtrar", class: 'btn btn-primary btn-lg btn-block' %>
          </div>
          <div class="col-12 col-lg-6 col-xl-auto my-1 my-xl-0">
            <%= link_to('Filtrar hoje', root_path, class: 'btn btn-light btn-lg btn-block') %>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="section p-3">
    <div class="row p-0">
      <div class="col-sm-12 col-md-3 col-xl-4 col-3-grid bordered-section">
        <h1>Pedidos Em andamento(Pagos)</h1>
        <%= render 'order_items_with_filters', order_items: @grouped_in_progress_order_items,
                   show_revenue_estimation: false, highlighted: true, status: BlingOrderItemStatus::IN_PROGRESS %>
      </div>

      <div class="col-sm bordered-section border-danger">
        <h1>Pedidos Impressos</h1>
        <%= render 'order_items_with_filters', order_items: @grouped_printed_order_items,
                   show_revenue_estimation: false, highlighted: false, status: BlingOrderItemStatus::PRINTED %>
      </div>    

      <div class="col-sm-12 col-md-3 col-xl-4 col-3-grid bordered-section">
        <h1>Pedidos Pendentes</h1>
        <%= render 'order_items_with_filters', order_items: @grouped_pending_order_items, show_revenue_estimation: false,
                   highlighted: false, status: BlingOrderItemStatus::PENDING %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm bordered-section">
        <h1>Pedidos Feitos(checados e verificados)</h1>
        <%= render 'order_items', order_items: @current_done_order_items, show_revenue_estimation: false, highlighted:false %>
      </div>
      <div class="col-sm bordered-section">
        <h1>Pedidos Coletados</h1>
        <%= render 'order_items', order_items: @collected_orders, show_revenue_estimation: false, highlighted:false %>
      </div>
    </div>
  </section>
</div>

<script>
    setInterval(function() {
        window.location.reload();
    }, 60000);
    $(document).ready(function (){
        let isHidden = true;

        $('#eye-slash, #eye').click(function (){
            if(isHidden) {
                $('#revenue-estimation').removeAttr('hidden');
                $('#average-ticket').removeAttr('hidden');
                $('.bi-eye').removeAttr('hidden');
                $('.bi-eye-slash').attr('hidden', true);
                isHidden = false;
            } else {
                $('#revenue-estimation').attr('hidden', true);
                $('#average-ticket').attr('hidden', true);
                $('.bi-eye').attr('hidden', true)
                $('.bi-eye-slash').removeAttr('hidden');
                isHidden = true;
            }
        });
    })
</script>
