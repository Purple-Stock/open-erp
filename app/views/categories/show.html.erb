<%- model_class = Category -%>
<div class="section-header">
  <div class="page-header">
    <h1><%= t '.title', :default => t(model_class.model_name.human.titleize) %></h1>
  </div>
</div>

<div class="section-body">
  <div class="card">
    <div class="card-body">

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(t(:name)) %>:</strong></dt>
        <dd><%= @category.name %></dd>
      </dl>

      <%= link_to t('.back', :default => t("helpers.links.back")), categories_path, :class => 'btn btn-default' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_category_path(@category), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), category_path(@category), :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>

    </div>
  </div>
</div>