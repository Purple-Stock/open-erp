<div class="section-header">
  <div class="page-header">
    <h1><%= t '.title', :default => 'Inserir pedidos Simplo 7' %></h1>
  </div>
</div>

<div class="section-body">
  <div class="card">
    <div class="card-body">

      <%= form_with url: save_orders_path do |form| %>
        <div class="form-row">
          <div class="form-group col-6">
            <%= form.text_field :number_orders, class: 'form-control', autocomplete: "email", placeholder: "Coloque os pedidos separados por vÃ­rgula" %>
          </div>
          <div class="form-group col-6">
            <%= select("sale", "origin", Sale.store_sales.keys.to_a, {}, { include_blank: true, class: 'form-control select2' }) %>
          </div>
        </div>
        <%= submit_tag("Integrar Pedido", :class => "btn btn-info") %>
      <% end %>
    </div>
  </div>
</div>