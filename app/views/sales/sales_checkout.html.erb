<style>
.form-group textarea {
  max-width: 500px;
  width: 100%;
  height: 500px;
  resize: vertical;
}

</style>
<div class="main-wrapper">
  <div class="main-content">
    <section class="section">
        <%= form_with url: verify_sales_path, method: :post, local: true do |f| %>
          <div class="form-group">
            <%= f.text_area :content, rows: 5 %>
          </div>
          
          <%= f.submit "Verify", class: "btn btn-primary" %>
        <% end %>

      </div>
    </section>
  </div>
</div>
