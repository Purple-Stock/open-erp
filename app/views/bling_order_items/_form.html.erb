      <%= f.label bling_order_item.human_attribute(:valor), :class => 'control-label' %>
      <%= f.text_field :valor, :class => 'form-control', disabled: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col">
      <%= f.label bling_order_item.human_attribute(:descricao), :class => 'control-label' %>
