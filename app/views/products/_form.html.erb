<%= form_for @product, :html => { :class => "form-horizontal product", :multipart => true } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being
          saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-group col-6">
      <%= f.label :custom_id, t(:custom_id), :class => 'control-label' %>
      <%= f.text_field :custom_id, :class => 'form-control' %>
    </div>
    <div class="form-group col-6">
      <%= f.label :category_id, t(:category_id), :class => 'control-label' %>
      <%= select("product", "category_id", Category.all.collect { |p| [p.name, p.id] }, { include_blank: true }, { class: 'form-control select2-list' }) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t(:name), :class => 'control-label' %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-row">
    <div class="form-group col-4">
      <%= f.label :sku, :class => 'control-label' %>
      <%= f.text_field :sku, :class => 'form-control' %>
    </div>
    <div class="form-group col-4">
      <%= f.label :extra_sku, :class => 'control-label' %>
      <%= f.text_field :extra_sku, :class => 'form-control' %>
    </div>
    <div class="form-group col-4">
      <%= f.label t(:price), :class => 'control-label' %>
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="custom-file">
      <%= f.file_field :image, class: 'custom-file-input' %>
      <%= f.label t('products.image'), :class => 'custom-file-label' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-3">
      <div class="custom-control custom-checkbox">
        <%= f.check_box :highlight, class: 'custom-control-input' %>
        <%= f.label :highlight, class: 'custom-control-label font-weight-bold' %>
      </div>
    </div>
    <div class="form-group col-3">
      <div class="custom-control custom-checkbox">
        <%= f.check_box :active, class: 'custom-control-input' %>
        <%= f.label :active, t(:active), class: 'custom-control-label font-weight-bold' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit t('save'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
  </div>

<% end %>
