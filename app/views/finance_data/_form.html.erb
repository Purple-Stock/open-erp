<%= form_with(model: finance_datum, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.text_field :date, value: l(finance_datum.date), class: 'form-control', data: { controller: 'date' } %>
  </div>
  <div class="form-group">
    <%= form.label :income %>
    <%= form.number_field :income, step: :any, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :expense %>
    <%= form.number_field :expense, step: :any, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :fixed_amount %>
    <%= form.number_field :fixed_amount, step: :any, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
