<br><br><br>
<%- model_class = SaleProduct -%>
<div class="page-header">
  <h1><%=t('sales_products.one') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('sales_products.quantity') %>:</strong></dt>
  <dd><%= @sale_product.quantity %></dd>
  <dt><strong><%= t('sales_products.value') %>:</strong></dt>
  <dd><%= @sale_product.value %></dd>
  <dt><strong><%= t('sales_products.product') %>:</strong></dt>
  <dd><%= @sale_product.product_id %></dd>
  <dt><strong><%= t('sales_products.sales') %>:</strong></dt>
  <dd><%= @sale_product.sale_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sale_products_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_product_path(@sale_product), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_product_path(@sale_product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
