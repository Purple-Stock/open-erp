<%= render 'layouts/flash' %>

<%= form_for @sale_product, :html => { :class => "form-horizontal sale_product" } do |f| %>
  <div class="form-row">
    <div class="form-group col-4">
      <%= f.label t('sales_products.quantity'), :class => 'control-label' %>
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <!--<div class="form-group">
    <%#= f.label t('sales_products.value'), :class => 'control-label' %>
  <%#= f.text_field :value, :class => 'form-control' %>
  </div>-->
    <div class="form-group col-8">
      <%= f.label t('sales_products.product'), :class => 'control-label' %>
      <%= f.select :product_id, Product.all.collect { |p| ["#{p.custom_id} - #{p.name} - #{p.price}", p.id] }, { :include_blank => t('sales_products.select_dropdown.product') }, { :class => "product-id form-control select2-list" } %>
    </div>
  </div>
  <!--<div class="form-group">
    <%#= f.label t(:sale_id), :class => 'control-label' %>
  <%#= f.select :sale_id, Sale.all.collect {|p| [ p.value, p.id ] }, { :include_blank => t('sales_products.select_dropdown.sale')}, :class => "form-control form-control-sm" %>
  </div>-->

  <div class="form-group">
    <%= f.submit t('sales_products.submit'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), sale_products_path, :class => 'btn btn-default' %>
  </div>

<% end %>
