<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Stores</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Stores', stores_path %></div>
      <div class="breadcrumb-item">Show Store</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Store</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">Name:</dt>
          <dd class="col-sm-9"><%= @store.name %></dd>
          <dt class="col-sm-3">Address:</dt>
          <dd class="col-sm-9"><%= @store.address %></dd>
          <dt class="col-sm-3">Phone:</dt>
          <dd class="col-sm-9"><%= @store.phone %></dd>
          <dt class="col-sm-3">Email:</dt>
          <dd class="col-sm-9"><%= @store.email %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_store_path(@store), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), stores_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Store') %>
